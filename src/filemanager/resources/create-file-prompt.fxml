<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="promptWindow" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onKeyPressed="#closePromptDialog" prefHeight="180.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="filemanager.controllers.CreateFilePromptController">
   <children>
      <Label text="Creating a new File:">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </Label>
      <Label alignment="CENTER" text="Enter the name for your file:">
         <font>
            <Font size="16.0" />
         </font>
         <VBox.margin>
            <Insets bottom="5.0" left="10.0" />
         </VBox.margin>
      </Label>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="fileNameField" onKeyPressed="#createFileByButton" promptText="Enter the name here">
               <font>
                  <Font size="16.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </TextField>
            <ComboBox fx:id="typeComboBox" prefHeight="35.0" prefWidth="120.0" promptText="Choose type" visibleRowCount="5">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </ComboBox>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="createButton" defaultButton="true" mnemonicParsing="false" onKeyPressed="#createFileByButton" onMouseClicked="#createFileByClick" text="Create">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="250.0" right="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onMouseClicked="#cancelClicked" text="Cancel">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
